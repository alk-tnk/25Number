<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dbbea1"
    tools:context=".ResultActivity" >

    <TextView
        android:id="@+id/new_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="New Score!"
        android:textColor="#fffff87f"
        android:textSize="30sp"
        android:visibility="gone"

        />

    <com.Ichif1205.gridreflexes.common.ui.FontTextView
        android:id="@+id/scoreTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textColor="#fff"
        android:textSize="80sp"
        font:font="DIN_Medium"
        />

    <Button
        android:id="@+id/retryButton"
        style="@style/main_button"
        android:layout_centerVertical="true"
        android:text="Retry" />

    <Button
        android:id="@+id/topButton"
        style="@style/main_button"
        android:layout_below="@id/retryButton"
        android:layout_marginTop="50dp"
        android:text="Top" />
    
    <FrameLayout
        android:id="@+id/appc_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        />

</RelativeLayout>