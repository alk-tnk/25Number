<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dbbea1"
    tools:context=".MainActivity" >

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/main_icon"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        />


    <Button
        android:id="@+id/numbersButton"
        style="@style/main_button"
        android:layout_marginTop="200dp"
        android:text="25 Number"

        />

    <com.Ichif1205.gridreflexes.common.ui.FontTextView
        android:id="@+id/number_highScore_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/numbersButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:textSize="25sp"
        font:font="DIN_Medium"
        />

    <Button
        android:id="@+id/gridButton"
        style="@style/main_button"
        android:layout_marginTop="10dp"
        android:text="25 Reverse"
        android:layout_below="@id/number_highScore_view"
        />

    <com.Ichif1205.gridreflexes.common.ui.FontTextView
        android:id="@+id/reverse_highScore_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:layout_below="@id/gridButton"
        font:font="DIN_Medium"
        />

    <!-- IconCell を上部に横一列配置 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:layout_height="80dp" >

        <view class="jp.maru.mrd.IconCell"
            android:id="@+id/myCell1"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <view class="jp.maru.mrd.IconCell"
            android:id="@+id/myCell2"
            android:layout_width="80dp" android:layout_height="80dp" />

        <view class="jp.maru.mrd.IconCell"
            android:id="@+id/myCell3"
            android:layout_width="80dp" android:layout_height="80dp" />

        <view class="jp.maru.mrd.IconCell"
            android:id="@+id/myCell4"
            android:layout_width="80dp" android:layout_height="80dp" />
        <view class="jp.maru.mrd.IconCell"
            android:id="@+id/myCell5"
            android:layout_width="80dp" android:layout_height="80dp" />
    </LinearLayout>

</RelativeLayout>